<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Cooking Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName = "VBE_MixLemonade"]/ingredients</xpath>
					<value>
						<li>
							<filter>
								<thingDefs>
									<li>VCE_RawSugar</li>
								</thingDefs>
							</filter>
							<count>4</count>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>

