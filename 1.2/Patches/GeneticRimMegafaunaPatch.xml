<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>GeneticRim Megafauna Patch</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>


				<!-- Para Milk -->
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName = "VBE_BrewLatteCoffee"]/ingredients/li[@Name="VBE_MilkIngredient"]/filter/thingDefs</xpath>
					<value>
						<li>GR_ParaMilk</li>
						<li>GR_GreenMilk</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName = "VBE_BrewLatteCoffee"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>GR_ParaMilk</li>
						<li>GR_GreenMilk</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName = "VBE_BrewLatteCoffee"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>GR_ParaMilk</li>
						<li>GR_GreenMilk</li>
					</value>
				</li>
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName = "VBE_MakeBlackTea"]/ingredients/li[@Name="VBE_MilkIngredient"]/filter/thingDefs</xpath>
					<value>
						<li>GR_ParaMilk</li>
						<li>GR_GreenMilk</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName = "VBE_MakeBlackTea"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>GR_ParaMilk</li>
						<li>GR_GreenMilk</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/RecipeDef[defName = "VBE_MakeBlackTea"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>GR_ParaMilk</li>
						<li>GR_GreenMilk</li>
					</value>
				</li>









			</operations>
		</match>
	</Operation>


</Patch>

